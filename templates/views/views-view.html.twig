{#
/**
 * @file
 * Theme override for a main view template.
 *
 * @see template_preprocess_views_view()
 */
#}
{%
  set showWrapper = attributes.toArray|length
%}
{% if showWrapper %}
  <{{ tag }}{{ attributes }}>
{% endif %}

  {% if title %}
    {{ title_prefix }}
    <{{ title_tag }} class="view-title">{{ title }}</{{ title_tag }}>
    {{ title_suffix }}
  {% endif %}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {{ rows }}
  {{ empty }}
  {{ pager }}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}

{% if showWrapper %}
  </{{ tag }}>
{% endif %}
