{#
/**
 * @file
 * Theme override for a main view template.
 *
 * @see template_preprocess_views_view()
 */
#}
{%
  set showWrapper = attributes.toArray|length
%}
{% if showWrapper %}
  <{{ tag }}{{ attributes }}>
{% endif %}

  {% if title %}
    {{ title_prefix }}
    <{{ title_tag }} class="view-title">{{ title }}</{{ title_tag }}>
    {{ title_suffix }}
  {% endif %}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {% if exposed_tag %}
    <{{ exposed_tag}}{{ exposed_attributes }}>
  {% endif %}
    {{ exposed_before }}
    {{ exposed }}
    {{ exposed_after }}
  {% if exposed_tag %}
    </{{ exposed_tag}}>
  {% endif %}

  {{ attachment_before }}

  {% if content_tag %}
    <{{ content_tag}}{{ content_attributes }}>
  {% endif %}
    {{ content_before }}
    {{ rows }}
    {{ empty }}
    {{ pager }}
    {{ content_after }}
  {% if content_tag %}
    </{{ content_tag}}>
  {% endif %}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}

{% if showWrapper %}
  </{{ tag }}>
{% endif %}
