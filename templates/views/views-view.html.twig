{#
/**
 * @file
 * Theme override for a main view template.
 *
 * @see template_preprocess_views_view()
 */
#}
{%
  set showWrapper = attributes.toArray|length
%}
{% if showWrapper %}
  <div{{ attributes }}>
{% endif %}

  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {{ rows }}
  {{ empty }}
  {{ pager }}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}

{% if showWrapper %}
  </div>
{% endif %}
