{
  "name": "Aeon Admin",
  "description": "Responsive base admin theme for Drupal.",
  "browserSync": {
    "enabled" : true,
    "proxy" : "http://localhost",
    "port" : 3000,
    "openAutomatically" : false,
    "notify" : false
  },
  "css": {
    "dest": "../assets/css",
    "src": [
      "scss/**/*.scss"
    ],
    "includePaths": [
      "../scss"
    ]
  },
  "js": {
    "dest": "../assets/js",
    "src": [
      "js/**/*.js"
    ],
    "vendorDest": "../assets/js/vendor"
  },
  "templates": {
    "src": [
      "../templates/**/*.twig"
    ]
  },
  "drush": {
    "src": [
      "src/Plugin/Preprocess/*.php"
    ]
  },
  "images": {
    "src": [
      "../assets/images/**/*"
    ],
    "dest": "../assets/images/"
  }
}
